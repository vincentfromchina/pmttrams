<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".FrameActivity" >

    <LinearLayout
        android:id="@+id/rel_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#ff000000"
            android:gravity="top|center" >

            <TextView
                android:id="@+id/rel_1_showtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="top"
                android:text="12:33"
                android:includeFontPadding="false"
                android:textColor="#ffffffff"
                android:textSize="170sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ff000000"
            android:gravity="center" >

            <TextView
                android:id="@+id/rel_1_showdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2017年12月31日"
                android:textColor="#ffffffff"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ff000000"
                android:orientation="horizontal"
                >

             <TextView
                 android:id="@+id/rel_1_week"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:gravity="center"
                 android:layout_weight="1"
                 android:includeFontPadding="false"
                 android:text="周 日"
                 android:textColor="#ffffffff"
                 android:textSize="65sp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:gravity="right"
                   android:layout_weight="3"
                   android:includeFontPadding="false"
                   android:text="农\n历"
                   android:textColor="#ff00ff00"
                   android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffff0000"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="初 三"
                    android:id="@+id/rel_1_nongli"
                    android:includeFontPadding="false"
                    android:gravity="top"
                    android:textColor="#ffffffff"
                    android:textSize="70sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 第二个图层 -->

    <LinearLayout
        android:id="@+id/rel_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        
        <LinearLayout
            android:id="@+id/rel_2_show_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
             android:background="#ff000000"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/rel_2_showtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top"
                android:text="12:33"
                android:includeFontPadding="false"
                android:textColor="#ffffffff"
                android:textSize="75sp" />
            </LinearLayout>
        
      <LinearLayout
         
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
             android:background="#ffff7755"
            android:orientation="horizontal">
            
        <LinearLayout
            android:id="@+id/show_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
             android:background="#ffff7755"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="2"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="室外"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffffff"
                        android:textSize="55sp" />

                    

                    <ImageView
                        android:id="@+id/rel_2_img_shiwai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignTop="@+id/textView1"
                        android:layout_marginLeft="15dp"
                        android:src="@android:drawable/presence_invisible" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView1"
                        android:layout_alignBottom="@+id/textView1"
                        android:layout_toRightOf="@+id/textView1"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ffffffff"
                        android:textSize="35sp"
                        android:text="℃" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" >
                    
                    <TextView
                        android:id="@+id/rel_2_showtmp_wai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="--.-"
                        android:textColor="#ffffffff"
                        android:textSize="120sp" />
                    
                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rel_2_showtmp_wai"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="10dp"
                        android:text="℃"
                        android:textColor="#ffffffff"
                        android:visibility="gone"
                        android:textSize="60sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#ff53cbff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="2"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="室内"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffffff"
                        android:textSize="55sp" />

                    

                    <ImageView
                        android:id="@+id/rel_2_img_shinei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView2"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:src="@android:drawable/presence_invisible" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView2"
                        android:layout_alignBottom="@+id/textView2"
                        android:layout_toRightOf="@+id/textView2"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ffffffff"
                        android:textSize="35sp"
                        android:text="℃" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/rel_2_showtmp_nei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="--.-"
                        android:textColor="#ffffffff"
                        android:textSize="120sp" />
                    
                     <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rel_2_showtmp_nei"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="10dp"
                        android:text="℃"
                        android:visibility="gone"
                        android:textColor="#ffffffff"
                        android:textSize="60sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

      </LinearLayout>
   </LinearLayout>

</RelativeLayout>